{
  "manifest_version": 3,

  "name": "Copy-to-clipboard for GiHub Pull Requests",
  "description": "Copy-to-clipboard for GiHub Pull Requests",
  "version": "1.0",

  "icons": {
    "256": "res/icon.png"
  },

  "content_scripts": [
      {
          "matches": ["https://github.com/*/pull/*"],
          "js": ["content.js"],
          "css": ["css/content.css"]
      }
  ],
  "permissions": [
    "activeTab", "scripting"
  ]
}
